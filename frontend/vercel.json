{
  "build": {
    "env": {
      "PRISMA_SCHEMA_PATH": "./schema.prisma"
    }
  },
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "app/api/uploads/route.ts": {
      "maxDuration": 300,
      "memory": 2048
    },
    "app/api/orders/route.ts": {
      "maxDuration": 300,
      "memory": 2048
    }
  }
}
